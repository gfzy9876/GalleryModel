<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            android:shape="rectangle">

            <solid android:color="@color/color_ED"/>

            <corners android:radius="6dp"/>
        </shape>
    </item>

    <item android:top="50dp"
        android:bottom="50dp"
        android:left="50dp"
        android:right="50dp">
        <bitmap android:src="@drawable/default_photo"
            android:tint="@color/color_D5"/>
    </item>

</layer-list>